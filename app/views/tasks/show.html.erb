<div class="max-w-md mx-auto p-6 border rounded-xl shadow-sm bg-white">
    <div class="text-center mb-4">
        <h2 class="text-2xl font-semibold"><%= @task.title %></h2>
        <p class="text-sm text-gray-500">Informações da Tarefa</p>
    </div>


    <turbo-frame id="person_info">
        <div class="space-y-4">
            <div>
                <span class="text-gray-600 text-sm">Titulo:</span>
                <p class="text-lg font-medium"><%= @task.title %></p>
            </div>


            <div>
                <span class="text-gray-600 text-sm">Descricao:</span>
                <p class="text-lg font-medium"><%= @task.description %></p>
            </div>


            <div>
                <span class="text-gray-600 text-sm">Status:</span>
                <p class="text-lg font-medium"><%= @task.status %></p>
            </div>

            <div>
                <span class="text-gray-600 text-sm">Participantes</span>
                <% @task.people.each do |person| %>
                    <p class="text-lg font-medium"><%= person.name %></p>
                <% end %>
            </div>

        </div>

    </turbo-frame>

    <div class="mt-4 flex">
        <a href="/" class="text-blue-700 px-4 py-2 mt-4">Back</a>
        <%= button_to "Apagar Tarefa",
            delete_task_path(@task),
            method: :delete,
            data: { confirm: "Tem certeza que deseja deletar esta pessoa?" },
            class: "mt-4 text-red-600 px-4 py-2 rounded-lg"
        %>
        <%= button_to "Editar",
            edit_task_path(@task),
            method: :get,
            class: "mt-4 mr-3 text-gray-600 border-b pt-2"
        %>
    </div>
</div>


